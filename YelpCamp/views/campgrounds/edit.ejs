<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Edit <%=campground.name%></h1>
    <div style="width: 30%; margin: 30px auto">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">    
            <input type="text" name="campground[name]" value="<%=campground.name %>" class="form-control" required>
        </div>
        <div class="form-group">
            <input type="text" name="campground[image]" value="<%=campground.image%>" class="form-control" required>
        </div>
        <div class="form-group">
            <input type="text" name="campground[description]" value="<%=campground.description%>" class="form-control" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>    
        </form>
        <a href="/campgrounds">Back</a>
    </div>    
</div>    
<% include ../partials/footer %>
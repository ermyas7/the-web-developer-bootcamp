<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Create a new campground</h1>
    <div style="width: 30%; margin: 30px auto">
        <form method="post" action="/campgrounds">
        <div class="form-group">    
            <input type="text" name="name" placeholder="campground name" class="form-control" required>
        </div>
        <div class="form-group">
            <input type="text" name="img" placeholder="image Url" class="form-control" required>
        </div>
        <div class="form-group">
            <input type="text" name="desc" placeholder="description" class="form-control" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>    
        </form>
        <a href="/campgrounds">Back</a>
    </div>    
</div>    
<% include ../partials/footer %>
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <div class="list-group-item">
                    info1
                </div>
                <div class="list-group-item">
                    info2
                </div>
                <div class="list-group-item">
                    info3
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=campground.image%>">
                <div class="caption">
                    <h4 class="pull-right">$10.00/night</h4>
                    <h4><%=campground.name %></h4>
                    <p><%= campground.description %></p>
                    <p>Submitted by <%= campground.author.username %></p>
                </div>
            </div>
        </div>
        <div class="text-right">
           <p>
                <a class="btn btn-lg btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add Comment</a>
            </p>  
        </div>
    </div>   
    <hr>
    <div class="row">
        <div class="col-md-12 well">
            <%campground.comments.forEach((comment)=>{ %>
            <strong><%=comment.author.username%></strong> <span class="pull-right">10 days ago</span> 
            <p></p><%= comment.text %></p>
            <% }) %>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>
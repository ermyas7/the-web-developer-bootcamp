<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Add new comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto">
        <form method="post" action="/campgrounds/<%=campground._id%>/comments">
        <div class="form-group">    
            <input type="text" name="comment[author]" placeholder="name" class="form-control" required>
        </div>
        <div class="form-group">    
            <input type="text" name="comment[text]" placeholder="comment" class="form-control" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-success">comment</button>
        </div>    
        </form>
        <a href="/campgrounds">Back</a>
    </div>    
</div>    
<% include ../partials/footer %>
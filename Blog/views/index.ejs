<% include ./partials/header %>
    <div class="ui main text container">
        <div class="ui huge header">
            RESTFUL BLOG APP
        </div>
        <div class="ui top attachment segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){%>
                    <div class="item">
                        <div class="image">
                            <img src="<%=blog.image%>">
                        </div>
                        <div class="content">
                            <a class="header" href="blogs/<%=blog._id%>"><%= blog.title %></a>
                            <div class="meta">
                               <span> <%= blog.created.toDateString() %></span> 
                            </div>
                            <div class="description">
                                <p> <%=blog.body.substring(0, 100)%>....</p> 
                            </div>
                            <div class="extra">
                                <form action="blogs/<%=blog._id%>" method="GET">
                                    <button class="ui floated basic blue button">See More<i class="right chevron icon"></i> </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                <%})%>
                
            </div>
        </div>
        
    </div>

<% include ./partials/footer %>